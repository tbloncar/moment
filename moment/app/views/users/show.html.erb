<div class="page-header">
  <h1><%= @user.full_name %></h1>
</div>
<div class="row">
  <div class="span12">
    <p><%= @user.bio %></p>
    <div class="user-uploads masonry">
      <% @user.uploads.each do |upload| %>
        <div class="item">
          <%= image_tag upload.image.url(:medium) %>
          <p><%= upload.description %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
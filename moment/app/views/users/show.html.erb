<div class="page-header">
  <h1><%= @user.full_name %></h1>
</div>
<div class="row">
  <div class="span12">
    <p><%= @user.bio %></p>
    <div class="user-uploads masonry">
      <% @user.uploads.recent.each do |upload| %>
        <div class="item feed-item">
          <%= image_tag upload.image.url(:medium) %>
          <p class="feed-item-description"><%= upload.description %></p>
          <% upload.tags.each do |tag| %>
            <%= link_to tag.name, tag_url(tag.name), class: "feed-item-tag" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>